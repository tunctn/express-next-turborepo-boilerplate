{
  "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "ignore": ["apps/web/.next", "node_modules", "dist", ".turbo"],
    "attributePosition": "auto",
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 140,
    "lineEnding": "lf"
  },
  "linter": {
    "rules": {
      "a11y": {
        "useSemanticElements": "off"
      },
      "style": {
        "noUnusedTemplateLiteral": "off",
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      },
      "complexity": {
        "useLiteralKeys": "off",
        "noForEach": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "info",
        "noUnusedVariables": "warn"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/coverage/**",
      "**/out/**",
      "build",
      "coverage",
      ".gitlab",
      ".vscode",
      "node_modules",
      ".next",
      "dist",
      "out",
      ".turbo",
      "**/meta/*.json",
      "**/logs/*",
      "**/.serverless/*",
      "**/*.css",
      "**/ts-sandbox/.esbuild/.build/*",
      "package.json"
    ]
  }
}
